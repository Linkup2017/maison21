    <record id="inherit_setup_bank_account_wizard" model="ir.ui.view">
            <field name="name">account.setup_bank_account_wizard_inherit</field>
            <field name="model">account.setup.bank.manual.config</field>
            <field name="inherit_id" ref="account.setup_bank_account_wizard"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bank_id']" position="after">
                    <field name="bank_list_id"  groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="bank_password" required='True' groups="kr_pb_bank.group_linkup_account_manger" password="True"/>
                </xpath>

                <xpath expr="//field[@name='bank_bic']" position="after">
                    <field name="bank_code" groups="kr_pb_bank.group_linkup_account_manger" placeholder="“금융기관 번호 입력"  readonly="1" force_save="1"/>
                    <field name="bank_availability" groups="kr_pb_bank.group_linkup_account_manger" readonly="1"/>
                    <field name="bank_type" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="date_today" string='Transaction from' groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="value_bank_id" attrs="{'invisible': ['|', ('bank_code', '=' , False), ('bank_code', '!=', '0004')], 'required': [('bank_code', '=', '0004')]}" placeholder="“국민은행”인 경우 필수 " groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="birth_date" required='True' placeholder="“개인”인 경우:예금주 생년월일(6자리-YYMMDD), “법인”인 경우:사업자번호(10자리)" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="search_bank_id" attrs="{'invisible': ['|',('bank_code', '=' , False), ('bank_code', '!=', '0031')], 'required': [('bank_code', '=', '0031')]}" placeholder="“조회전용 계정 아이디 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="search_bank_password" attrs="{'invisible': ['|', ('bank_code', '=' , False), ('bank_code', '!=', '0031')], 'required': [('bank_code', '=', '0031')]}" placeholder="“조회전용 계정 비밀번호 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger" password="True"/>
                    <field name="search_bank_id" attrs="{'invisible': ['|', ('bank_code', '=' , False), ('bank_code', '!=', '0048')], 'required': [('bank_code', '=', '0048')]}" placeholder="“조회전용 계정 아이디 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="search_bank_password" attrs="{'invisible': ['|',('bank_code', '=' , False), ('bank_code', '!=', '0048')], 'required': [('bank_code', '=', '0048')]}" placeholder="“조회전용 계정 비밀번호 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger" password="True"/>
                    <field name="search_bank_id" attrs="{'invisible': ['|', ('bank_code', '=' , False),('bank_code', '!=', '0088')], 'required': [('bank_code', '=', '0088')]}" placeholder="“조회전용 계정 아이디 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="search_bank_password" attrs="{'invisible': ['|', ('bank_code', '=' , False),('bank_code', '!=', '0088')], 'required': [('bank_code', '=', '0088')]}" placeholder="“조회전용 계정 비밀번호 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger" password="True"/>
                </xpath>
            </field>
    </record>



    <record id="account_journal_form_inherit" model="ir.ui.view">
            <field name="name">account.journal.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="before">
                    <header>

                        <field name="status" widget="statusbar" statusbar_visible="draft,create" attrs="{'invisible': [('type', '!=', 'bank')]}"/>
                        <button name="set_bank_data" string="Connect" type="object" attrs="{'invisible': ['|', ('type', '!=', 'bank'), ('status', '=', 'create')]}"/>
<!--                        <button name="bank_check_etax_status_all" string="Import data from Popbill" type="object" attrs="{'invisible': [('type', '!=', 'bank')]}"/>-->
<!--                        <button name="bank_check_etax_status_create_all" string="Create Bank statement" type="object" attrs="{'invisible': [('type', '!=', 'bank')]}"/>-->
<!--                        <button name="account_bank_statement" string="Create Account Bank Statement" type="object" attrs="{'invisible': [('type', '!=', 'bank')]}"/>-->
                        <button name="status_changer" string="Unconnect" type="object" attrs="{'invisible': [('status', '=', 'draft')]}"/>
<!--                        <button name="check_etax_account_holder" type="object"  string="Test"/>-->

                    </header>

                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button class="oe_stat_button" type="object" name="open_account_bank_statement_view" icon="fa-book" string="Transaction History"  attrs="{'invisible': [('type', '!=', 'bank')]}"/>
                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="after">
                    <div role="alert" class="alert alert-success"
                         style="height:48px, width30px,margin-bottom:1px;"
                         attrs="{'invisible':[('warning' ,'=', False)]}"
                    >이미 연동된 계좌번호 입니다 </div>
                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="after">
                    <widget
                    name="web_ribbon"
                    title="계좌연동 확인"
                    bg_color="bg-success"
                    attrs="{'invisible': [ ('status', '!=', 'create')]}"
                     />
                </xpath>


                <xpath expr="//field[@name='bank_account_id']" position="replace">
                     <field name="bank_account_id" attrs="{'readonly': [('status', '=', 'create')]}"  string="Account Number" context="{'default_partner_id': company_partner_id, 'form_view_ref': 'account.view_company_partner_bank_form'}"/>
                </xpath>

                <xpath expr="//field[@name='bank_id']" position="replace">
                    <field name="bank_id" invisible="1"/>
                </xpath>


                <xpath expr="//field[@name='bank_id']" position="after">
                    <field name="bank_list_id" attrs="{'invisible': [('bank_account_id', '=', False)], 'readonly': [('status', '=', 'create')]}"/>
                </xpath>

                <xpath expr="//field[@name='bank_statements_source']" position="replace">
                    <field name="bank_statements_source" widget="radio" attrs="{'required': [('type', '=', 'bank')], 'readonly': [('status', '=', 'create')]}" groups="account.group_account_readonly"/>
                </xpath>


                <xpath expr="//field[@name='bank_statements_source']" position="after">
                    <field name="warning" invisible="1"/>
                    <field name="bank_code" attrs="{'readonly': [('status', '=', 'create')]}" placeholder="“금융기관 번호 입력”" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="bank_type" attrs="{'readonly': [('status', '=', 'create')]}" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="bank_password" attrs="{'readonly': [('status', '=', 'create')]}" placeholder="“계좌 비밀번호 입력”" groups="kr_pb_bank.group_linkup_account_manger" password="True"/>
                    <field name="value_bank_id" attrs="{'invisible': ['|', ('bank_code', '=' , False), ('bank_code', '!=', '0004')], 'readonly': [('status', '=', 'create')]}" placeholder="“국민은행”인 경우 필수 " groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="birth_date" attrs="{'readonly': [('status', '=', 'create')]}" placeholder="“개인”인 경우:예금주 생년월일(6자리-YYMMDD), “법인”인 경우:사업자번호(10자리)" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="date_today" attrs="{'readonly': [('status', '=', 'create')]}" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="search_bank_id" attrs="{'invisible': ['|',('bank_code', '=' , False), ('bank_code', '!=', '0031')], 'readonly': [('status', '=', 'create')]}" placeholder="“조회전용 계정 아이디 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="search_bank_password" attrs="{'invisible': ['|', ('bank_code', '=' , False), ('bank_code', '!=', '0031')], 'readonly': [('status', '=', 'create')]}" placeholder="“조회전용 계정 비밀번호 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger" password="True"/>
                    <field name="search_bank_id" attrs="{'invisible': ['|', ('bank_code', '=' , False), ('bank_code', '!=', '0048')], 'readonly': [('status', '=', 'create')]}" placeholder="“조회전용 계정 아이디 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="search_bank_password" attrs="{'invisible': ['|',('bank_code', '=' , False), ('bank_code', '!=', '0048')], 'readonly': [('status', '=', 'create')]}" placeholder="“조회전용 계정 비밀번호 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger" password="True"/>
                    <field name="search_bank_id" attrs="{'invisible': ['|', ('bank_code', '=' , False),('bank_code', '!=', '0088')]}" placeholder="“조회전용 계정 아이디 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger"/>
                    <field name="search_bank_password" attrs="{'invisible': ['|', ('bank_code', '=' , False),('bank_code', '!=', '0088')], 'readonly': [('status', '=', 'create')]}" placeholder="“조회전용 계정 비밀번호 (대구은행, 신협, 신한은행 필수)”" groups="kr_pb_bank.group_linkup_account_manger" password="True"/>
                </xpath>
            </field>
    </record>


